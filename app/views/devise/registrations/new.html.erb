<div class="container " style="margin-left: auto; margin-right: auto; width: 25em;">
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="row d-inline-flex border p-4 my-3 border-3 rounded border-secondary">
    <%= form_for(resource, as: resource_name, html: {:class => "col " }, url: registration_path(resource_name)) do |f| %>
      <div class="card " style="border: none;">
        <div class="card-head">
          <h2>Rejestracja</h2>
        </div>
        <div class="card-body">
          <div class="mb-3" style="width: 16em;">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="mb-3" style="width: 16em;">
            <%= f.label :password, "Hasło" %>
            <% if @minimum_password_length %>
            <em>(minimum <%= @minimum_password_length %> znaków)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>



          <div class="mb-3">
            <%= f.label :password_confirmation, "Powtórz hasło" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>


          <div class="mb-3 mt-4">
            <%= f.submit "Zarejestruj", class: "btn btn-dark" %>
          </div>

      <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>
